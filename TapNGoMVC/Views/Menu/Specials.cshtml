@{
    ViewData["Title"] = "Ponuda Dana";
}

<div class="text-center mb-4">
    <h1 class="display-4">☀️ Ponuda Dana</h1>
    <p class="lead text-muted">Iskoristite naše posebne ponude dostupne samo danas!</p>
</div>

<div class="mb-4">
    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
        &larr; Natrag na početnu
    </a>
</div>


<div class="row row-cols-1 row-cols-md-2 g-4">

    <div class="col">
        <div class="card h-100 shadow-sm card-hover-effect">
            <img src="https://placehold.co/600x400/D9C8B4/4D3B3B?text=Ledena+Kava" class="card-img-top" alt="Ledena kava">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Ledena Kava s Karamela Sirupom</h5>
                <p class="card-text">Savršeno osvježenje za vruće ljetne dane. Naš najbolji espresso s mlijekom, ledom i slatkim sirupom od karamele.</p>
                <div class="mt-auto text-end">
                    <h4 class="text-success fw-bold">3,50 €</h4>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <span class="badge bg-primary">Novo u ponudi!</span>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm card-hover-effect">
            <img src="https://placehold.co/600x400/E8A87C/4D3B3B?text=Tost+Sendvi%C4%8D" class="card-img-top" alt="Tost sendvič">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Gourmet Tost Sendvič</h5>
                <p class="card-text">Hrskavi tost sa šunkom, sirom, svježom rajčicom i našim specijalnim umakom. Idealan za brzi doručak ili gablec.</p>
                <div class="mt-auto text-end">
                    <h4 class="text-success fw-bold">4,20 €</h4>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <span class="badge bg-warning text-dark">Ograničena količina</span>
            </div>
        </div>
    </div>

</div>