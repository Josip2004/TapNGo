@model TapNGoMVC.ViewModels.MenuVM

@{
    ViewData["Title"] = "Details";
}

<h1>Detalji artikla</h1>

<hr />
<dl class="row">

    <dt class="col-sm-2">Naziv</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Opis</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Cijena</dt>
    <dd class="col-sm-10">@Model.Price €</dd>

    <dt class="col-sm-2">Slika</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
        }
        else
        {
            <span style="font-size: 24px;">X</span>
        }
    </dd>

    <dt class="col-sm-2">Kategorija</dt>
    <dd class="col-sm-10">@Model.CategoryName</dd>
</dl>

