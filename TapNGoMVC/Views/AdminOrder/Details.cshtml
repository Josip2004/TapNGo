@using TapNGoMVC.ViewModels
@model OrderVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

        <div class="col p-4">
            <div class="border p-4">
                <h5>STOL: @Model.TableNumber</h5>
                <h6>POPIS NARUDŽBE:</h6>

                @foreach (var item in Model.OrderItems)
                {
                    <div class="d-flex justify-content-between px-2">
                        <span>@item.MenuItem.Name</span>
                        <span>kol. @item.Quantity</span>
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(Model.Note))
                {
                    <div class="mt-4 p-3 bg-light rounded">
                        <strong>Napomena:</strong>
                        <p class="mb-0">@Model.Note</p>
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">ODUSTANI</a>

            <form asp-action="Confirm" asp-controller="AdminOrder" asp-route-orderId="@Model.Id" method="post">
                        <button type="submit" class="btn btn-success">POTVRDI</button>
                    </form>
                </div>
            </div>
        </div>
