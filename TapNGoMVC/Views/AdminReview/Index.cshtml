@using TapNGoMVC.ViewModels
@model AdminReviewVM
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col p-4">
    @foreach (var review in Model.Reviews)
    {
        <div class="card mb-3 p-3 d-flex flex-row align-items-start gap-3">

            <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <strong>Ocjena usluge</strong>
                </div>

                <div class="mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= review.Rating)
                        {
                            <span class="star" style="color: gold; margin-right: 3px; font-size: 20px;"
                                  data-value="@i">&#9733;</span>
                        }
                        else
                        {
                            <span class="star" data-value="@i">&#9734;</span> 
                        }
                    }
                </div>

                <div class="border rounded p-2">
                    @review.Comment
                </div>
            </div>
        </div>
    }
</div>
