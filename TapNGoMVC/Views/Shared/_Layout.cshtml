@using System.Security.Claims
@{
    var userName = ViewContext.HttpContext.User?.Identity?.Name;
    var isLoggedIn = ViewContext.HttpContext.User?.Identity?.IsAuthenticated ?? false;
    var firstName = ViewContext.HttpContext.User?.FindFirst("FirstName")?.Value;
    var lastName = ViewContext.HttpContext.User?.FindFirst("LastName")?.Value;
    var role = ViewContext.HttpContext.User?.FindFirst(ClaimTypes.Role)?.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TapNGoMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TapNGoMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar bg-info text-light shadow-sm border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap gap-2">

                <button class="btn btn-outline-light flex-shrink-0" type="button">Jezik</button>

                <form method="get" asp-controller="MenuItem" asp-action="Index"
                      class="flex-grow-1" style="min-width: 200px; max-width: 600px;">
                    <div class="input-group input-group-sm">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search..." />
                        <button class="btn btn-outline-light" type="submit">🔍</button>
                    </div>
                </form>

                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-outline-light flex-shrink-0" type="button">Košarica</button>

                    @if (!isLoggedIn)
                    {
                        <a class="btn btn-outline-light flex-shrink-0" asp-controller="User" asp-action="Login">Login</a>
                        <a class="btn btn-outline-light flex-shrink-0" asp-controller="User" asp-action="Register">Register</a>
                    }
                    else
                    {
                        <span class="badge bg-light text-dark">@firstName @lastName (@role)</span>
                        <a class="btn btn-outline-light flex-shrink-0" asp-controller="User" asp-action="Logout">Logout</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-info text-light footer text-muted px-1 py-2">
        <div class="container-fluid d-flex justify-content-between w-100 flex-wrap">
            <button class="btn btn-outline-light w-20" type="button">
                Pića
            </button>

            <button class="btn btn-outline-light w-20" type="button">
                Hrana
            </button>

            <button class="btn btn-outline-light w-20" type="button">
                Vina
            </button>

            <button class="btn btn-outline-light w-20" type="button">
                Kokteli
            </button>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
